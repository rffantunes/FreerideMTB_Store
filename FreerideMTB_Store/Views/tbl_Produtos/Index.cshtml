@model IEnumerable<FreerideMTB_Store.Models.tbl_Produtos>

@{
    ViewBag.Title = "Produtos";
}

<h2>Lista de Produtos</h2>

<p>
    @Html.ActionLink("Criar novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID Produto
        </th>
        <th>
           Categoria
        </th>
        <th>
           Sub-Categoria
        </th>
        <th>
           Nome Produto
        </th>
        <th>
          Descrição
        </th>
        <th>
            Preço
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_produto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_Categoria.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_Sub_Categoria.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Foto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_produto }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id_produto }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.Id_produto })
        </td>
    </tr>
}

</table>
