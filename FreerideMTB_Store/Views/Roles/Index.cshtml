@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Cargos";
}

<style>
    .row {
        width: 100%;
        margin-top:5vw;
        /*margin: 0 auto;*/
        padding:1rem;
        display: flex;
    }

    .block {
        width: 5hw;
    }

    .leftContain {
        /*background-color: green;*/
        display: table;
        margin-left: 2rem;
        margin-right: auto;
    }
    .rightContain {
        /*background-color: red;*/
        display: table ;
        margin-left: auto;
        margin-right: auto;
    }
   

</style>

<div class="row">
    <div class="block, leftContain">
        <h2>Lista de Cargos </h2>
        <br />

        @Html.ActionLink("Criar novo cargo", "Create") | @Html.ActionLink("Gerir cargos", "ManageUserRoles")
        <hr />
        <div>
            @foreach (var role in Model)
            {
                <p>
                    <strong>@role.Name | </strong>
                    <span onclick="return confirm('Tem a certeza que deseja eliminar?')"><a href="/Roles/Delete?RoleName=@role.Name" class="delLink" style="color:red;">Apagar</a></span> |
                    @Html.ActionLink("Editar", "Edit", new { roleName = @role.Name })
                </p>
            }
        </div>
    </div>

    <div class="block, rightContain">
        <h2>Gerir Base de dados </h2>
        <br />
        <div class="block">
            @Html.ActionLink("Criar nova marca", "Create", "tbl_Marca") | @Html.ActionLink("Gerir Marcas", "Index", "tbl_Marca")
            <hr />
            @Html.ActionLink("Criar nova Categoria", "Create", "tbl_Categoria") | @Html.ActionLink("Gerir Categorias", "Index", "tbl_Categoria")
            <hr />
            @Html.ActionLink("Criar nova SubCategoria", "Create", "tbl_Sub_Categoria") | @Html.ActionLink("Gerir SubCategorias", "Index", "tbl_Sub_Categoria")
            <hr />
            @Html.ActionLink("Ver Encomendas", "Index", "tbl_Encomenda")
            <hr />
        </div>
    </div>
</div>
