@model IEnumerable<FreerideMTB_Store.Models.tbl_Sub_Categoria>

@{
    ViewBag.Title = "FreeRide SubCategorias";
}

<style>
    .table tr:hover:first-child {
        background: initial;
        cursor: default;
    }

    .table tr:hover {
        background: #f1f1f1;
        cursor: pointer;
    }
</style>
<h2>SubCategorias</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        <label class="btn btn-default">
            @Html.ActionLink("Criar nova", "Create")
        </label>


    </p>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbl_Categoria.Nome)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
    {
        <tr onclick="location.href='@Url.Action("Details", new { id = item.Id_sub_cat })'">
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_Categoria.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_sub_cat }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id_sub_cat }) |
                @if (User.IsInRole("Admin"))
                {@Html.ActionLink("Eliminar", "Delete", new { id = item.Id_sub_cat })
                }
            </td>
        </tr>
}

    </table>
