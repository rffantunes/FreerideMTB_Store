@model IEnumerable<FreerideMTB_Store.Models.tbl_Categoria>

@{
    ViewBag.Title = "FreeRide Categorias";
}
<style>
    .table tr:hover:first-child {
        background: initial;
        cursor: default;
    }

    .table tr:hover {
        background: #f1f1f1;
        cursor: pointer;
    }
</style>
<h2>Categorias</h2>

<p>
    <label class="btn btn-default">
        @Html.ActionLink("Criar nova", "Create")
    </label>


</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr onclick="location.href='@Url.Action("Details", new { id = item.Id_cat })'">
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_cat }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id_cat }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_cat })
        </td>
    </tr>
}

</table>
